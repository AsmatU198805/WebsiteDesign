@page "/Products"
@rendermode InteractiveServer

@inject HttpClient Http
@inject NavigationManager Nav
@using WebsiteDesign.Models
@inject WebsiteDesign.Services.CartService CartService

<div class="container">

    <!-- CATEGORY FILTER BUTTONS -->
    <div class="btn-group mb-4" role="group">
        <button class="btn @(selectedCategory == null ? "btn-primary" : "btn-outline-primary")"
                @onclick="ShowAll">
            All
        </button>

        <button class="btn @(selectedCategory == category.Sports ? "btn-primary" : "btn-outline-primary")"
                @onclick="() => FilterCategory(category.Sports)">
            Sports
        </button>

        <button class="btn @(selectedCategory == category.Electronics ? "btn-primary" : "btn-outline-primary")"
                @onclick="() => FilterCategory(category.Electronics)">
            Electronics
        </button>

        <button class="btn @(selectedCategory == category.Automobile ? "btn-primary" : "btn-outline-primary")"
                @onclick="() => FilterCategory(category.Automobile)">
            Automobile
        </button>

        <button class="btn @(selectedCategory == category.LifeStyle ? "btn-primary" : "btn-outline-primary")"
                @onclick="() => FilterCategory(category.LifeStyle)">
            Lifestyle
        </button>

        <button class="btn @(selectedCategory == category.Garments ? "btn-primary" : "btn-outline-primary")"
                @onclick="() => FilterCategory(category.Garments)">
            Garments
        </button>
    </div>

    <!-- PRODUCTS GRID -->
    <div class="row">

        @if (FilteredProducts == null)
        {
            <p>Loading products...</p>
        }
        else if (!FilteredProducts.Any())
        {
            <div class="alert alert-warning">
                No products found
            </div>
        }
        else
        {
            foreach (var v in FilteredProducts)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="/images/@v.ImageUrl"
                             class="card-img-top img-fluid" />

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@v.ProductName</h5>

                            <p class="card-text mb-2">
                                <small class="text-muted">@v.ProductCategory</small>
                            </p>

                            <p class="card-text mb-2">
                                <small class="text-muted">@v.Price</small>
                            </p>

                            <div class="d-flex gap-2 mt-auto">
                                <button class="btn btn-outline-primary w-100"
                                        @onclick="() => GoToDetails(v.ProductId)">
                                    Details
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
</div>

@code {

    List<Product> AllProducts = new();
    List<Product> FilteredProducts = new();

    category? selectedCategory = null;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            AllProducts = await Http.GetFromJsonAsync<List<Product>>(
                "http://localhost:5138/api/Products") ?? new();

            FilteredProducts = AllProducts.ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }

    void ShowAll()
    {
        selectedCategory = null;
        FilteredProducts = AllProducts.ToList();
    }

    void FilterCategory(category cat)
    {
        selectedCategory = cat;
        FilteredProducts = AllProducts
            .Where(x => x.ProductCategory == cat)
            .ToList();
    }

    void GoToDetails(int productId)
    {
        Nav.NavigateTo($"ProductDetails/{productId}");
    }
}
