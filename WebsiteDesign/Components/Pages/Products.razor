@page "/Products"
@rendermode InteractiveServer

@using WebsiteDesign.Models
@inject WebsiteDesign.Services.ProductService ProductService
@inject NavigationManager Nav

<h3>Products List</h3>
<br />

<!-- Category Buttons -->
<div class="btn-group mb-4" role="group">
    <button class="btn @(selectedCategory == "All" ? "btn-primary" : "btn-outline-primary")"
            @onclick="ShowAll">
        All
    </button>

    <button class="btn @(selectedCategory == "Sports" ? "btn-primary" : "btn-outline-primary")"
            @onclick="ShowSports">
        Sports
    </button>

    <button class="btn @(selectedCategory == "Electronics" ? "btn-primary" : "btn-outline-primary")"
            @onclick="ShowElectronics">
        Electronics
    </button>

    <button class="btn @(selectedCategory == "Automobile" ? "btn-primary" : "btn-outline-primary")"
            @onclick="ShowAutomobile">
        Automobile
    </button>

    <button class="btn @(selectedCategory == "Lifestyle" ? "btn-primary" : "btn-outline-primary")"
            @onclick="ShowLifestyle">
        Lifestyle
    </button>

    <button class="btn @(selectedCategory == "Garments" ? "btn-primary" : "btn-outline-primary")"
            @onclick="ShowGarments">
        Garments
    </button>
</div>

<div class="container">
    <div class="row">

        @if (!FilteredProducts.Any())
        {
            <div class="col-12">
                <div class="alert alert-secondary">
                    No products in this category.
                </div>
            </div>
        }
        else
        {
            @foreach (var p in FilteredProducts)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="@p.Image"
                             class="card-img-top img-fluid"
                             alt="@p.Name" />

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@p.Name</h5>

                            <p class="card-text mb-2">
                                <small class="text-muted">@p.Category</small>
                            </p>

                            <button class="btn btn-primary mt-auto"
                                    @onclick="() => GoToDetails(p.Id)">
                                View Details
                            </button>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
</div>

@code {

    string selectedCategory = "All";

    List<ProductModel> AllProducts = new();
    List<ProductModel> FilteredProducts = new();

    protected override void OnInitialized()
    {
        AllProducts = ProductService.GetProducts();
        FilteredProducts = AllProducts.ToList();
    }

    void ShowAll() => FilterCategory("All");
    void ShowSports() => FilterCategory("Sports");
    void ShowElectronics() => FilterCategory("Electronics");
    void ShowAutomobile() => FilterCategory("Automobile");
    void ShowLifestyle() => FilterCategory("Lifestyle");
    void ShowGarments() => FilterCategory("Garments");

    void FilterCategory(string category)
    {
        selectedCategory = category;

        FilteredProducts = category == "All"
            ? AllProducts.ToList()
            : AllProducts
                .Where(x => x.Category.Equals(category, StringComparison.OrdinalIgnoreCase))
                .ToList();
    }

    void GoToDetails(int Id)
    {
        
        Nav.NavigateTo($"/ProductDetails/{Id}");
    }
}
